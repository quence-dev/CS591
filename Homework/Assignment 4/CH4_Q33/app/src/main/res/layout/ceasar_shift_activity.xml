<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/shift_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/set_shiftbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_Label" />

    <TextView
        android:id="@+id/Input_Label"
        android:layout_width="157dp"
        android:layout_height="21dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="185dp"
        android:gravity="center"
        android:text="@string/ceasar_shift"
        app:layout_constraintBottom_toTopOf="@+id/set_shiftbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_shiftbtn"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="@string/set_shift"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_Label" />
</androidx.constraintlayout.widget.ConstraintLayout>